<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MAIN APP THEME -->
    <style name="Theme.NoteFlow" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- STATUS BAR & NAVIGATION COLORS -->
        <item name="android:statusBarColor">@color/primaryColorDark</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>

        <!-- ACCENT / PRIMARY COLORS -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>

        <!-- Optional edge-to-edge -->
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <!-- SPLASH SCREEN THEME -->
    <style name="Theme.EasySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundDark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.NoteFlow</item>
    </style>

</resources>
